{
	"name": "vsc2rbx",
	"displayName": "VSC2RBX",
	"description": "Execute scripts from VSCode in Roblox Studio!",
	"publisher": "vyon",
	"version": "1.2.1",
	"engines": {
		"vscode": "^1.73.0"
	},
	"author": {
		"name": "Vyon"
	},
	"icon": "assets/icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/Vyon/VSC2RBX.git"
	},
	"categories": [
		"Other"
	],
	"pricing": "Free",
	"activationEvents": [
		"onCommand:vsc2rbx.activate",
		"onLanguage:lua",
		"onLanguage:luau"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "vsc2rbx.activate",
				"title": "VSC2RBX Activate"
			},
			{
				"command": "vsc2rbx.execute",
				"title": "VSC2RBX Execute"
			},
			{
				"command": "vsc2rbx.context",
				"title": "VSC2RBX Set Context"
			},
			{
				"command": "vsc2rbx.place",
				"title": "VSC2RBX Set Place"
			},
			{
				"command": "vsc2rbx.plugin",
				"title": "VSC2RBX Plugin Installation"
			}
		],
		"configuration": {
			"title": "VSC2RBX Settings",
			"properties": {
				"VSC2RBX.RemoteExecution": {
					"type": "boolean",
					"default": false,
					"description": "Allows external programs to queue scripts for execution via the /api/execute endpoint"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"package": "node esbuild.js --production",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/express": "^4.17.17",
		"@types/glob": "^8.0.0",
		"@types/mocha": "^10.0.1",
		"@types/node": "^16.18.118",
		"@types/vscode": "^1.73.0",
		"@vscode/test-electron": "^2.2.0",
		"esbuild": "^0.24.0",
		"glob": "^8.0.3",
		"mocha": "^10.1.0",
		"typescript": "^4.9.3"
	},
	"dependencies": {
		"@vscode/vsce": "^3.2.1",
		"body-parser": "^2.2.0",
		"express": "^4.18.2"
	}
}
